<% if flash.has?(:message) %>
  <p style="color:#c40707;"><%= flash[:message] %> </p>
<% end %>

<% @vineyards.each do |vineyard| %>
<p><a href="/vineyards/<%=vineyard.id%>"><%= vineyard.name %></a></p>
<h3>Located at: <%=vineyard.location%></h3>
<h3>Contact: <%=vineyard.phone_number%></h3>
<p>Review: <%=vineyard.review%></p>
<a class= "button" href="/vineyards/<%=vineyard.id%>/edit">Edit</a>
<br>
<br>
<br>
<br>
<% current_user.wines.all.sort_by.each do |wine| %>
<a href="vineyards/<%= wine.vineyard.id %>"><%= wine.vineyard.name %></a>
<h3>Located at: <%=wine.vineyard.location%></h3>
<h3>Contact: <%=wine.vineyard.phone_number%></h3>
<p>Review: <%=wine.vineyard.review%></p>

<br>
<br>
<br>
<br>



<h3>Wine List</h3>
<% @wines.each do |wine| %>
<p><a href="/wines/<%=wine.id%>"><%= wine.name %></p></a>
<%end%>
<%end%>
<%end%>

<a class= "button" href="/wines">Wine List</a>
<br>
<br>

<a class= "button" href="/vineyards/new">Add a Vineyard or Winery</a>
