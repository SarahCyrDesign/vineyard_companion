<div class="signup-page">
  <div class="container">
    <h1>Add a new Wine Tasting Experience!</h1>
    <br/>
    <form action="/wines" method="POST">
      <ul class="flex-outer">
        <li>
          <label for="name">Name:</label>
          <input type="text" name="wine[name]" required>
        </li>
        <li>
          <label for="price_per_bottle">Price per Bottle: $ </label>
          <input type="text" name="wine[price_per_bottle]" required></input>
        </li>
        <li>
          <p><label for="color">Type of Wine:</label></p>
          <select name="wine[color]">
            <option value="Red">Red</option>
            <option value="White">White</option>
            <option value="Ros&eacute;">Ros&eacute;</option>
        </select>
      </li>
      <li>
        <label for="scent">Scent(s):</label>
        <input type="text" name="wine[scent]" required>
      </li>
      <li>
        <label for="taste">Taste(s):</label>
        <input type="text" name="wine[taste]" required>
      </li>
      <br/>
      <li>
        <h4><label for="summary">Final Thoughts:</label></h4>
        <textarea name="wine[summary]" rows="4" cols="50"  required></textarea>
      </li>
      <li>
        <p>Rating:</p>
          <select name="wine[rating]" value="N/A">
          <option value="1">1 star</option>
          <option value="2">2 stars</option>
          <option value="3">3 stars</option>
          <option value="4">4 stars</option>
          <option value="5">5 stars</option>
        </select>
      </li>
      <li>
        <label>Select Vineyard</label>
          <% current_user.vineyards.all.sort_by.each do |vineyard| %>
          <input type="radio" name="wine[vineyard_id]" id="<%= vineyard.name %>" value="<%=vineyard.id%>"><%=vineyard.name%></input>
        <%end%>
        <input type="radio">none</input>
      </li>
        <h4>or add another Vineyard</h4>
      <li>
          <label for="name">Name:</label>
          <input  type="text" name="vineyard[name]" id="vineyard_name"></input>
      </li>
      <li>
        <label for="location">location:</label>
        <input  type="text" name="vineyard[location]" id="vineyard_location"></input>
      </li>
      <li>
        <label for="phone_number">Phone Number:</label>
        <input  type="text" name="vineyard[phone_number]" id="vineyard_phone_number"></input>
      </li>
      <li>
        <h4><label for="review">Review:</label></h4>
        <textarea name="vineyard[review]" id="vineyard_review" rows="4" cols="50" ></textarea>
      </li>
        <ul class="flex-inner">
          <li>
            <button type="submit" class="submit">Submit</button>
          </li>
        </ul>
      </ul>
    </form>
  </div>
</div>
