<% if flash.has?(:message) %>
  <p style="color:#c40707;"><%= flash[:message] %> </p>
<% end %>

<%@wines.each do |wine|%>
<p><a href="/wines/<%=wine.id%>"><%= wine.name %></p>
<% wine.vineyards.each do |vineyard| %>
<p><%= vineyard.name %></p>
<a class= "button" href="/wines/<%=wine.id%>/edit">Edit</a>
<%end%>
<%end%>


<a class= "button" href="/wines/new">Add a new Wine</a>
